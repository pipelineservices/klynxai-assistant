"use client";

import { useEffect, useMemo, useRef, useState } from "react";

/* ---------------- Types ---------------- */

type Role = "user" | "assistant";

type Message = {
  role: Role;
  content: string;
};

type ChatSession = {
  id: string;
  title: string;
  messages: Message[];
};

const STORAGE_KEY = "klynx_chat_sessions";
const THEME_KEY = "klynx_theme";

/* ---------------- Utils ---------------- */

function safeId() {
  return "id_" + Date.now() + "_" + Math.random().toString(36).slice(2, 8);
}

/* ---------------- Page ---------------- */

export default function Page() {
  const [sessions, setSessions] = useState<ChatSession[]>([]);
  const [activeId, setActiveId] = useState<string>("");
  const [input, setInput] = useState("");
  const [streaming, setStreaming] = useState(false);
  const [theme, setTheme] = useState<"dark" | "light">("dark");

  const chatScrollRef = useRef<HTMLDivElement>(null);
  const abortRef = useRef<AbortController | null>(null);

  /* ---------- Init ---------- */
  useEffect(() => {
    const t = localStorage.getItem(THEME_KEY) as any;
    if (t === "dark" || t === "light") setTheme(t);

    const raw = localStorage.getItem(STORAGE_KEY);
    if (raw) {
      const parsed = JSON.parse(raw);
      if (Array.isArray(parsed) && parsed.length) {
        setSessions(parsed);
        setActiveId(parsed[0].id);
        return;
      }
    }

    const first = { id: safeId(), title: "New chat", messages: [] };
    setSessions([first]);
    setActiveId(first.id);
  }, []);

  /* ---------- Persist ---------- */
  useEffect(() => {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(sessions));
  }, [sessions]);

  useEffect(() => {
    localStorage.setItem(THEME_KEY, theme);
  }, [theme]);

  /* ---------- Scroll ---------- */
  useEffect(() => {
    chatScrollRef.current?.scrollTo({
      top: chatScrollRef.current.scrollHeight,
      behavior: "smooth",
    });
  }, [sessions, streaming]);

  const active = useMemo(
    () => sessions.find((s) => s.id === activeId),
    [sessions, activeId]
  );

  /* ---------- Clipboard (HTTP safe) ---------- */
  function copyText(text: string) {
    try {
      const ta = document.createElement("textarea");
      ta.value = text;
      document.body.appendChild(ta);
      ta.select();
      document.execCommand("copy");
      document.body.removeChild(ta);
    } catch {
      alert("Copy failed");
    }
  }

  /* ---------- Chat Actions ---------- */

  function ensureActiveChat() {
    if (sessions.length === 0) {
      const id = safeId();
      setSessions([{ id, title: "New chat", messages: [] }]);
      setActiveId(id);
      return false;
    }
    if (!sessions.find((s) => s.id === activeId)) {
      setActiveId(sessions[0].id);
      return false;
    }
    return true;
  }

  function deleteChat(id: string) {
    setSessions((prev) => {
      const next = prev.filter((s) => s.id !== id);
      if (id === activeId && next.length) {
        setActiveId(next[0].id);
      }
      if (!next.length) {
        const fresh = { id: safeId(), title: "New chat", messages: [] };
        setActiveId(fresh.id);
        return [fresh];
      }
      return next;
    });
  }

  function regenerate(i: number) {
    if (!active) return;
    for (let j = i - 1; j >= 0; j--) {
      if (active.messages[j].role === "user") {
        send(active.messages[j].content);
        return;
      }
    }
  }

  function stopStreaming() {
    abortRef.current?.abort();
    setStreaming(false);
  }

  /* ---------- Send ---------- */
  async function send(forced?: string) {
    if (!ensureActiveChat()) return;

    const text = (forced ?? input).trim();
    if (!text || streaming || !active) return;

    setInput("");
    setStreaming(true);

    const userMsg: Message = { role: "user", content: text };

    setSessions((prev) =>
      prev.map((s) =>
        s.id === activeId
          ? {
              ...s,
              title: s.messages.length === 0 ? text.slice(0, 40) : s.title,
              messages: [...s.messages, userMsg, { role: "assistant", content: "" }],
            }
          : s
      )
    );

    abortRef.current = new AbortController();

    try {
      const res = await fetch("/api/chat/stream", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        signal: abortRef.current.signal,
        body: JSON.stringify({ messages: [...active.messages, userMsg] }),
      });

      if (!res.body) throw new Error("No stream");

      const reader = res.body.getReader();
      const decoder = new TextDecoder();
      let buffer = "";

      while (true) {
        const { value, done } = await reader.read();
        if (done) break;

        const chunk = decoder.decode(value);
        if (chunk.includes("[DONE]")) break;

        buffer += chunk.replace(/^data:\s*/gm, "");

        setSessions((prev) =>
          prev.map((s) => {
            if (s.id !== activeId) return s;
            const msgs = [...s.messages];
            msgs[msgs.length - 1] = { role: "assistant", content: buffer };
            return { ...s, messages: msgs };
          })
        );
      }
    } catch (e: any) {
      if (e?.name !== "AbortError") console.error(e);
    } finally {
      setStreaming(false);
    }
  }

  const dark = theme === "dark";

  /* ---------- UI ---------- */
  return (
    <div
      style={{
        display: "flex",
        height: "100vh",
        background: dark ? "#0b1220" : "#f3f4f6",
        color: dark ? "#e5e7eb" : "#111827",
        fontFamily: "system-ui",
      }}
    >
      {/* Sidebar */}
      <aside
        style={{
          width: 260,
          borderRight: dark ? "1px solid #1f2937" : "1px solid #e5e7eb",
          padding: 12,
          overflowY: "auto",
        }}
      >
        <button onClick={() => setTheme(dark ? "light" : "dark")}>
          {dark ? "ğŸŒ™" : "â˜€ï¸"}
        </button>

        <button
          style={{ marginLeft: 8 }}
          onClick={() => {
            const id = safeId();
            setSessions((p) => [{ id, title: "New chat", messages: [] }, ...p]);
            setActiveId(id);
          }}
        >
          + New chat
        </button>

        {sessions.map((s) => (
          <div
            key={s.id}
            onClick={() => setActiveId(s.id)}
            style={{
              marginTop: 8,
              padding: 10,
              borderRadius: 8,
              background: s.id === activeId ? "#2563eb" : "transparent",
              cursor: "pointer",
            }}
          >
            {s.title}
            <button
              style={{ float: "right" }}
              onClick={(e) => {
                e.stopPropagation();
                deleteChat(s.id);
              }}
            >
              ğŸ—‘
            </button>
          </div>
        ))}
      </aside>

      {/* Chat */}
      <main
        style={{
          flex: 1,
          display: "flex",
          flexDirection: "column",
          minHeight: 0,
        }}
      >
        <div
          ref={chatScrollRef}
          style={{ flex: 1, overflowY: "auto", padding: 16 }}
        >
          {active?.messages.map((m, i) => (
            <div
              key={i}
              style={{
                marginBottom: 14,
                padding: 14,
                borderRadius: 12,
                background:
                  m.role === "user"
                    ? "#2563eb"
                    : dark
                    ? "#111827"
                    : "#e5e7eb",
              }}
            >
              <div style={{ whiteSpace: "pre-wrap" }}>{m.content}</div>

              {m.role === "assistant" && (
                <div style={{ marginTop: 6 }}>
                  <button onClick={() => copyText(m.content)}>ğŸ“‹ Copy</button>
                  <button onClick={() => regenerate(i)}>ğŸ”„ Regenerate</button>
                  {streaming && <button onClick={stopStreaming}>â¹ Stop</button>}
                </div>
              )}
            </div>
          ))}
        </div>

        {/* Input */}
        <form
          onSubmit={(e) => {
            e.preventDefault();
            send();
          }}
          style={{
            padding: 12,
            borderTop: dark ? "1px solid #1f2937" : "1px solid #e5e7eb",
            background: dark ? "#020617" : "#ffffff",
          }}
        >
          <textarea
            value={input}
            onChange={(e) => setInput(e.target.value)}
            onKeyDown={(e) => {
              if (e.key === "Enter" && !e.shiftKey) {
                e.preventDefault();
                send();
              }
            }}
            rows={2}
            style={{
              width: "100%",
              resize: "none",
              padding: 10,
              borderRadius: 8,
              border: "1px solid #999",
              background: dark ? "#020617" : "#fff",
              color: dark ? "#e5e7eb" : "#111827",
            }}
            placeholder="Ask anythingâ€¦"
          />

          <div style={{ textAlign: "right", marginTop: 6 }}>
            <button type="submit" disabled={streaming}>
              Send
            </button>
          </div>
        </form>
      </main>
    </div>
  );
}

