"use client";

import { useMemo, useState } from "react";
import ChatWindow from "../../components/ChatWindow";
import ChatInput from "../../components/ChatInput";
import { sendChat } from "../../lib/api";
import type { Message } from "../../lib/types";

type ChatId = "chat1" | "chat2" | "chat3";

export default function ChatPage() {
  const [activeChat, setActiveChat] = useState<ChatId>("chat1");
  const [messages, setMessages] = useState<Message[]>([]);
  const [loading, setLoading] = useState(false);

  const provider = useMemo(
    () => (activeChat === "chat1" ? "openai" : "mock"),
    [activeChat]
  );

  async function handleSend(text: string) {
    const nextMessages: Message[] = [
      ...messages,
      { role: "user", content: text },
    ];

    setMessages(nextMessages);
    setLoading(true);

    try {
      // ✅ CORRECT ORDER
      const res = await sendChat(
        provider,
        activeChat,
        nextMessages
      );

      setMessages([
        ...nextMessages,
        { role: "assistant", content: res.reply || "(empty)" },
      ]);
    } catch {
      setMessages([
        ...nextMessages,
        { role: "assistant", content: "⚠️ Failed to get response from LLM" },
      ]);
    } finally {
      setLoading(false);
    }
  }

  return (
    <div style={{ display: "flex", height: "100vh" }}>
      {/* SIDEBAR */}
      <div
        style={{
          width: 260,
          background: "linear-gradient(180deg, #0b1220, #0a1020)",
          color: "white",
          padding: 18,
        }}
      >
        <div style={{ fontWeight: 800, fontSize: 22, marginBottom: 16 }}>
          KLYNXAI
        </div>

        {(["chat1", "chat2", "chat3"] as ChatId[]).map((id) => (
          <div
            key={id}
            onClick={() => setActiveChat(id)}
            style={{
              padding: "10px 12px",
              borderRadius: 8,
              cursor: "pointer",
              marginBottom: 8,
              background:
                activeChat === id ? "rgba(255,255,255,0.08)" : "transparent",
            }}
          >
            {id === "chat1" ? "Chat 1 (AI)" : `Chat ${id.slice(-1)} (Mock)`}
          </div>
        ))}
      </div>

      {/* CHAT */}
      <div style={{ flex: 1, display: "flex", flexDirection: "column" }}>
        <ChatWindow messages={messages} loading={loading} />
      </div>

      {/* INPUT */}
      <div
        style={{
          width: 380,
          padding: 16,
          borderLeft: "1px solid #e5e7eb",
        }}
      >
        <ChatInput onSend={handleSend} disabled={loading} />
      </div>
    </div>
  );
}

