{
  "expo": {
    "name": "Klynx Retail Assistant",
    "slug": "klynxretail",
    "version": "0.1.0",
    "orientation": "portrait",
    "sdkVersion": "50.0.0",
    "platforms": ["ios", "android"],
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b1220"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "Klynx Retail Assistant needs camera access to scan barcodes and QR codes.",
        "NSPhotoLibraryUsageDescription": "Klynx Retail Assistant needs photo access to scan product images."
      }
    },
    "android": {
      "permissions": ["CAMERA", "READ_MEDIA_IMAGES"]
    }
  }
}
